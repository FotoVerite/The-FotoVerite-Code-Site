<%- @page_title = "Delete Project: #{@project.name}" -%>

<%= link_to('&laquo; Back to List'.html_safe, staff_projects_path, :class => 'back-link') %>

<div class="project delete">
  <h1><%= @page_title %></h1>
  <p>Are you sure you want to <strong>permanently</strong> delete this project?</p>
  
  <p class="item"><%= @project.name %></p>
  
  <%- form_tag(staff_project_path(@project), :method => :delete) do -%>
    <div id="operations">
      <%= submit_tag "Delete Project" %>
      <input type="button" value="Cancel" class='cancel-button' onclick="window.location.href='<%= staff_projects_path%>';" />
    </div>
  <%- end -%>
</div>
