<%- @page_title = "Edit Project: #{@portfolio.name}" -%>

<%= link_to('&laquo; Back to List'.html_safe, staff_portfolios_path, :class => 'back-link') %>

<div class="portfolio edit">
  <h1><%= @page_title %></h1>

  <%= form_for([:staff, @portfolio]) do |f| -%>
    <%= render(:partial => "form", :locals => {:f => f}) %>
    <div id="operations">
      <%= submit_tag("Update Project") %>
      <input type="button" value="Cancel" class='cancel-button' onclick="window.location.href='<%= staff_portfolios_path %>';" />
    </div>
  <%- end -%>
</div>
